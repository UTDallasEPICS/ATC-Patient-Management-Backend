generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  first_name String
  last_name String
  email String @unique 
  id    Int      @id @default(autoincrement())
  phone_number String
  birthday DateTime
  role Role @default(USER)

}
enum Role{
  USER
  ADMIN
  PATIENT
  EMPLOYEE
}

